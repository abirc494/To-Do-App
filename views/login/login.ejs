<% layout("layouts/boilerplate") %>

    <form method="POST" action="/login" novalidate>
        <h1>Login</h1>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input id="username" name="username" type="text" class="form-control" placeholder="e.g. abir2030" required>

        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input id="password" name="password" type="password" class="form-control" minlength="6" required>
        </div>
        <div>
            <button class="btn btn-primary w-100" type="submit">Login</button>
        </div>
    </form>
    <div class="text-center mt-3">
        <small>If you don't have an account- <a href="/singup">Sing Up</a></small>
    </div>