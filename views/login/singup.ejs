<% layout("layouts/boilerplate") %>

 <form  method="POST" action="/singup" novalidate>
    <h1>Sing up</h1>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input id="username" name="username" type="text" class="form-control" placeholder="e.g. abir2030" required>
          
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input id="email" name="email" type="email" class="form-control" placeholder="you@example.com" required>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input id="password" name="password" type="password" class="form-control" minlength="6" required>
          
        </div>

        <button class="btn btn-primary w-100" type="submit">Sign up</button>
      </form>

      <div class="text-center mt-3">
        <small>Already have an account? <a href="/login">Log in</a></small>
      </div>
    </div>
  </div>
</div>